<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <!-- Ajoute un nouveau thème dans le tableau de choix des thèmes -->
    <template id="is_theme_customize" inherit_id="theme_bootswatch.theme_customize" name="is_theme_customize">
        <table position="inside">
            <tr>
                <td>
                    <label>
                        <img style="width: 120px; height: 70px;" src="/is_pfp_electronique_theme/static/src/less/infosaone/thumbnail.png" alt="InfoSaône"/>
                        <input name="theme" type="radio" data-xmlid="is_pfp_electronique_theme.theme_infosaone"/>
                    </label>
                </td>
                <td></td>
                <td></td>
            </tr>
        </table>
    </template>

    <!-- Configuration de ce nouveau thème -->
    <template id="is_pfp_electronique_theme.theme_infosaone" name="InfoSaône" inherit_id="website.assets_frontend" active="False" customize_show="False">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/less" href='/is_pfp_electronique_theme/static/src/less/infosaone/bootswatch.less' t-ignore="true"/>
            <link rel="stylesheet" type="text/less" href='/is_pfp_electronique_theme/static/src/less/infosaone/variables.less'  t-ignore="true"/>
        </xpath>
    </template>


    <!-- Permet de masque le logo de la barre de titre -->
    <template id="is_layout_logo_show" inherit_id="website.layout_logo_show" customize_show="True" name="Masque Logo">
        <xpath expr="//header//a[@class='navbar-brand logo']" position="replace"/>
    </template>


    <!--
    <template id="is_custom_header2" inherit_id="website.layout" name="Header InfoSaône 2">
